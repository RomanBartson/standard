{% extends 'base.html.twig' %}

{% block body %}
    <section class="panel panel-default">
        <div class="panel-body">
            <header>Register Form</header>
            <div class="panel-content">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
                <div class="form-group {% if form.username.vars.errors|length %}has-error{% endif %}">
                    {{ form_label(form.username, null, {'label_attr': { 'class': 'control-label col-sm-2'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.username) }}
                    </div>
                    <div class="help-block col-sm-10 col-sm-offset-2">
                        {{ form_errors(form.username) }}
                    </div>
                </div>

                <div class="form-group {% if form.email.vars.errors|length %}has-error{% endif %}">
                    {{ form_label(form.email, null, {'label_attr': { 'class': 'control-label col-sm-2'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="help-block col-sm-10 col-sm-offset-2">
                        {{ form_errors(form.email) }}
                    </div>
                </div>

                {% for password in form.plainPassword %}
                    <div class="form-group {% if password.vars.errors|length %}has-error{% endif %}">
                        {{ form_label(password, null, {'label_attr': {'class': 'control-label col-sm-2'} }) }}
                        <div class="col-sm-10">
                            {{ form_widget(password, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="help-block col-sm-10 col-sm-offset-2">
                            {{ form_errors(password) }}
                        </div>
                    </div>
                {% endfor %}
                <div class="text-right">
                    <input
                            type="submit" value="Create"
                            class="btn btn-default"
                    />
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}